# Firefly III URL (no trailing slash)
FIREFLY_URL=http://localhost:8080

# Firefly III Personal Access Token (Profile -> OAuth -> Personal Access Tokens)
FIREFLY_TOKEN=ey...

# Cache TTL for category list (seconds, 0 disables caching)
FIREFLY_CATEGORIES_TTL=60

# OpenAI API Key (Optional, for LLM fallback)
OPENAI_API_KEY=sk-...

# OpenAI Model (Optional, defaults to gpt-3.5-turbo)
OPENAI_MODEL=gpt-3.5-turbo

# OpenAI Base URL (Optional, for OpenAI-compatible APIs like Ollama, LM Studio)
# OPENAI_BASE_URL=http://localhost:11434/v1

# Auto-approve threshold (0-1, 0 = disabled)
# Transactions with confidence >= this value are automatically categorized
AUTO_APPROVE_THRESHOLD=1

# Tags to apply when saving manually (comma-separated)
MANUAL_TAGS=firefly-categorizer

# Tags to apply when auto-approving (comma-separated)
AUTO_APPROVE_TAGS=firefly-categorizer,auto-approved
